{
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		},
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"lib": ["esnext", "dom"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "jest.config.js"]
}
